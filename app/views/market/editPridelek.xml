<Alloy>
	<Window id="editProduct">
		<ScrollView id="scrollableView" >
			<View class="preferencesView">
				<View class="thinView">
					<View height="200sp" layout="horizontal">
						<View class="50View">
							<View class="innerView">
								<Label class="label" id="lName"/>
								<TextField class="tf" id="name"/>
								<Label class="label" id="lPrice"/>
								<TextField  class="tf" id="price" />
							</View>
						</View>
						<View class="50View">
							<View class="innerView">
								<Label class="label" id="lUnit"/>
								<Picker id="unit"/>
								<Label class="label" id="lProduction"/>
								<TextField class="tf" id="production" />
							</View>
						</View>
					</View>
					<View class="innerView">
						<Label class="label" id="lDescription"/>
						<TextArea class="tfD" id="description"/>
						<Label class="middleSpacer"/>
						<Button id="bImageUpload" onClick="openImageULDialogPridelek">Slika pridelka</Button>
						<Label class="bottomSpacer"/>
						<View layout="horizontal">
							<Button id="bSave" onClick="savePreferences">Shrani</Button>
							<Button id="bDelete" onClick="deleteProduct"/>
						</View>
					</View>
				</View>
			</View>
		</ScrollView>
	</Window>
</Alloy>