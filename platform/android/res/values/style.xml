<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="Theme.Loket" parent="android:style/Theme.Holo.Light">
         <item name="android:actionBarStyle">@style/Theme.Loket.ActionBar</item>
         <item name="android:tabWidgetStyle">@style/Theme.Loket.CustomTabWidget</item>
  </style>
  <style name="Theme.Loket.ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#93C21C</item>
        <item name="android:titleTextStyle">@style/Theme.Loket.ActionBar.TitleTextStyle</item>
  </style>
  <style name="Theme.Loket.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#333333</item>
  </style>
  <style name="Theme.Loket.ActionBar.TitleTextColor" parent="@android:style/TextAppearance.Holo.Widget.IconMenu.Item">
        <item name="android:textColor">#333333</item>
  </style>

  <style name="Theme.Loket.CustomTabWidget" parent="android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/Theme.Loket.CustomTabWidgetText</item>
  </style>
  <style name="Theme.Loket.CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
      <item name="android:textSize">20sp</item>
      <item name="android:textColor">#FFF</item>
      <item name="android:textStyle">bold</item>
  </style>
</resources>