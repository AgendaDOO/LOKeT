<Alloy>
	<View class="preferencesView">
		<View height="40sp" layout="horizontal" backgroudColor="red">
			<Button class="headerButton" id="bFriday" onClick="friday" enabled="false"/>
			<Button class="headerButton" id="bSaturday" onClick="saturday" />
			<Button class="headerButton" id="bSunday" onClick="sunday"/>
		</View>
		<View class="borderView" />
		<ScrollableView id="scrollableView" onScrollEnd="scrolled">
            <View id="fridayView" class="vView">
				<View class="open">
					<Switch class="checkbox" id="fridayOpen" onChange="toggleFriday" />
				</View>
				<View class="hView" id="fridayTime">
					<View class="left">
						<Label id="friday_from" />
						<Picker class="timepicker" id="friday_from" />
					</View>
					<View class="right">
						<Label id="friday_to" />
						<Picker class="timepicker" id="friday_to" />
					</View>
				</View>
			</View>
			<View id="saturdayView" class="vView">
				<View class="open">
					<Switch class="checkbox" id="saturdayOpen" onChange="toggleSaturday"/>
				</View>
				<View class="hView" id="saturdayTime">
					<View class="left">
						<Label id="saturday_from" />
						<Picker class="timepicker" id="saturday_from" />
					</View>
					<View class="right">
						<Label id="saturday_to" />
						<Picker class="timepicker" id="saturday_to" />
					</View>
				</View>
			</View>
			<View id="sundayView" class="vView">
				<View class="open">
					<Switch class="checkbox" id="sundayOpen" onChange="toggleSunday" />
				</View>
				<View class="hView" id="sundayTime">
					<View class="left">
						<Label id="sunday_from" />
						<Picker class="timepicker" id="sunday_from" />
					</View>
					<View class="right">
						<Label id="sunday_to" />
						<Picker class="timepicker" id="sunday_to" />
					</View>
				</View>
			</View>
		</ScrollableView>
	</View>
</Alloy>