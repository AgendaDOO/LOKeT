<Alloy>
	<View class="preferencesView">
		<View height="40sp" layout="horizontal" backgroudColor="red">
			<Button class="headerButton" id="bBack" onClick="goBack"/>
			<Button class="headerButton" id="bCancel" onClick="cancel" />
			<Button class="headerButton" id="bSave" onClick="savePreferences"/>
		</View>
		<View class="borderView" />
		<ScrollableView id="scrollableView" onScrollEnd="scrolled">
            <View id="sezone" backgroundColor="#C4D4E4" >
				<Label  />
				<Button index="1" id="winter" onClick="selectSezona" title="Zima"/>
				<Button index="2" id="spring" onClick="selectSezona" title="Pomlad"/>
				<Button index="3" id="summer" onClick="selectSezona" title="Poletje"/>
				<Button index="4" id="autumn" onClick="selectSezona" title="Jesen"/>
				<Button index="-1" id="all" onClick="selectSezona" title="Vse sezone"/>
			</View>
			<View id="vrste">
				<TableView id="kategorijeList" backgroundColor="#C4E4C8" />
			</View>
			<View id="edit">
				<TableView id="vrsteList" backgroundColor="#C4E4C8" />
			</View>
		</ScrollableView>
	</View>
</Alloy>